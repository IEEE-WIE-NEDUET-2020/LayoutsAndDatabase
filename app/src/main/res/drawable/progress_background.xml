<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:duration="3000"
    android:fromDegrees="0"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080" >

    <shape
        android:innerRadiusRatio="2.5"
        android:innerRadius="20dp"
        android:shape="ring"
        android:thickness="2dp"
        android:useLevel="false" >
        <size
            android:height="50dp"
            android:width="50dp" />

        <solid android:color="@color/new1"/>

        <gradient
            android:centerColor="#CD6090"
            android:centerY="0.5"
            android:endColor="@color/new1"
            android:startColor="#FFE1FF"
            android:type="sweep"
            android:useLevel="false" />
    </shape>

</rotate>